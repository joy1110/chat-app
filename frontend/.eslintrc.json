{
  "extends": [
    "../.eslintrc.json",
    "next/core-web-vitals",
    "next/typescript",
    "airbnb",
    "airbnb/hooks"
  ],
  "settings": {
    "next": {
      "rootDir": "frontend/"
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".ts", ".tsx"]
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/require-default-props": 0,
    "react/function-component-definition": [0],
    "semi": "off",
    "@next/next/no-html-link-for-pages": "off"
  }
}
